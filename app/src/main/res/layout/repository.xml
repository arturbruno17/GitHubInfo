<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutRepository" >

        <TextView
            android:id="@+id/repositoryName"
            style="@style/TextAppearance.AppCompat.Titles.Title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_margin"
            android:layout_marginEnd="@dimen/grid_margin"
            android:text="@string/loading_data_user"/>

        <TextView
            android:id="@+id/repositoryDescription"
            style="@style/TextAppearance.AppCompat.Titles.Paragraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_margin"
            android:layout_marginEnd="@dimen/grid_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/secondaryLightColor" />
    </LinearLayout>
</layout>